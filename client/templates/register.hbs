<div class="sign">
    <div class="sign-in">{{i18n 'Sign In'}}</div>
    <div class="sign-up active">{{i18n 'Sign Up'}}</div>
    <div class="social">
        <a href="/auth/facebook"><button class="fb-btn sign-btn"><span class="btn-text-first">{{i18n 'Sign in with Facebook'}}</span></button></a>
        <a href="/auth/twitter"><button class="tw-btn sign-btn"><span class="btn-text">{{i18n 'Sign in with Twitter'}}</span></button></a>
    </div>
    <div class="or-icon"><span>{{i18n 'or'}}</span></div>
    <div class="login-m-form">
        <form method='post'>
            <input type="text" name="username" class="login-m-form-login login-input" placeholder="Email">
            <input type="password" name="password" class="login-m-form-password password-input" placeholder="{{i18n 'Password'}}">
            <input type="password" class="login-m-form-password password-confirm-input" placeholder="{{i18n 'Password again'}}">
            <div class="form-error hidden"></div>
        </form>
    </div>
    <div class="sign-login">{{i18n 'Sign Up'}}</div>
</div>
