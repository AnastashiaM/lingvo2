<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Upvoc</title>
        <link href="/css/myapp.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
        <!--<link href='https://fonts.googleapis.com/css?family=PT+Sans+Narrow:700&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>-->
        <!--<link href='https://fonts.googleapis.com/css?family=Roboto+Slab:700&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css'>-->
        <!--<link href='https://fonts.googleapis.com/css?family=Lora&subset=latin,cyrillic' rel='stylesheet' type='text/css'>-->
        <!--<link href='https://fonts.googleapis.com/css?family=PT+Sans+Narrow:700&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>-->
    </head>
    <body>
        <div class="popup-wrapper">
            <div class="functions-language">
            </div>
        </div>
         <div class="main-header clearfix">
            <div class="logo">
                <a href="/">upvoc</a>
                <p class="logo-p">improve your <br> english vocabulary</p>
            </div>
            <div class="lang-select">
                <span>My language:</span>
                    <select class='switch-lang'>
                        <option value="chinese">Chinese</option>
                        <option value="arabic">Arabic</option>
                        <option value="portugal">Portugal</option>
                        <option value="russian">Russian</option>
                        <option value="spanish">Spanish</option>
                        <option value="turkish">Turkish</option>
                    </select>
            </div>
            <div class="enter-block">
                {{#if user}}
                    <a href = "/account/" class="login-m">{{{ user.name }}}</a>&nbsp;/&nbsp;<a href = "/logout/" class="login-m">Sign out</a>
                {{else}}
                    Login&nbsp;via
                    <a href="/auth/facebook" class="login-m">Facebook</a>
                    |
                    <a href="/auth/twitter" class="login-m">Twitter</a>
                {{/if}}
            </div>
            <div class="enter"></div>
            <ul class="menu clearfix">
                <li class="menu-item"><a href="#"><span>All</span></a></li>
                <li class="menu-item"><a href="#category/world"><span>World</span></a></li>
                <li class="menu-item"><a href="#category/politics"><span>Politics</span></a></li>
                <li class="menu-item"><a href="#category/economics"><span>Economics</span></a></li>
                <li class="menu-item"><a href="#category/tech"><span>Technology</span></a></li>
                <li class="menu-item"><a href="#category/sport"><span>Sport</span></a></li>
                <li class="menu-item"><a href="#category/science"><span>Science</span></a></li>
                <li class="menu-item"><a href="#category/culture"><span>Culture</span></a></li>
                <li class="menu-item"><a href="#category/social"><span>Social</span></a></li>
            </ul>
            <div class="top-line clearfix tip-of-the-day">
                <div class="allocation">
                    <p>Click unknown word to see its translation<span class="close-cross"></span></p>
                </div>
            </div>
        </div>
        <div class="center-block">
            <div class="center-content clearfix"></div>
            <div class="dictionaries-section clearfix">
            </div>

        </div>
        <div class="showsettings"><span class="showspan">Show my translations</span></div>
        <!-- Yandex.Metrika counter -->
        <script src="https://mc.yandex.ru/metrika/watch.js" type="text/javascript"></script>
        <script type="text/javascript">
            try {
                var yaCounter36871255 = new Ya.Metrika({
                    id:36871255,
                    clickmap:true,
                    trackLinks:true,
                    accurateTrackBounce:true
                });
                window.yaCounter = yaCounter36871255;
            } catch(e) { }
        </script>
        <noscript><div><img src="https://mc.yandex.ru/watch/36871255" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
        <!-- /Yandex.Metrika counter -->
        <script src="/js/myapp.js"></script>
    </body>
</html>
